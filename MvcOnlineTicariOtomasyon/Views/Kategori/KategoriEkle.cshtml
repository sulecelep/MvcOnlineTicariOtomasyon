@model MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<br />
<h3>Kategori Ekleme Sayfası</h3>
<br />
<form class="form-group" method="post">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x=>x.KategoriAd, new {@class ="form-control"})
    <br />
    <button type="submit" class="btn btn-primary" id="btn1">Ekle</button>
</form>

<script>
    $('#btn1').click(function () {
        alert("Kategori başarılı şekilde eklendi.")
    });
</script>
