@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Cari Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("CariGuncelle", "Cari", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Carilerid)
<div class="form-group">
    @Html.Label("Ad")
    @Html.TextBoxFor(x => x.CarilerAd, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CarilerAd, "", new { @style = "color:red; font-size:12px;" })

</div>
    <br />
    <div class="form-group">
        @Html.Label("Soyad")
        @Html.TextBoxFor(x => x.CarilerSoyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CarilerSoyad, "", new { @style = "color:red; font-size:12px;" })

    </div>
    <br />
    <div class="form-group">
        @Html.Label("Şehir")
        @Html.TextBoxFor(x => x.CarilerSehir, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Mail")
        @Html.TextBoxFor(x => x.CarilerMail, new { @class = "form-control" })
    </div>
    <br />

    <button type="submit" class="btn btn-success">Güncelle</button>
}
