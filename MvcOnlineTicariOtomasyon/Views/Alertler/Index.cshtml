
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<br />
<br />
<button class="btn btn-primary" id="btn1">Buton1 </button>
<button class="btn btn-warning" id="btn2">Buton2 </button>
<button class="btn btn-info" id="btn3">Buton3 </button>
<button class="btn btn-danger" id="btn4">Buton4 </button>
<button class="btn btn-default" style="background-color: orange;" id="btn5">Buton5 </button>


<script>
    $('#btn1').click(function () {
        swal("Merhaba Dünya!");

    });
    $('#btn2').click(function () {
        swal("Burası Başlık!", "...burası içerik metni!");

    });
    $('#btn3').click(function () {
        swal("İyi iş!", "Butona tıkladın!", "success");

    });
    $('#btn4').click(function () {
        swal("Click on either the button or outside the modal.")
            .then((value) => {
                swal(`The returned value is: ${value}`);
            });

    });
    $('#btn5').click(function () {
        swal({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu dosyayı sildikten sonra geri alamayacaksınız.!",
            icon: "warning",
            buttons:  ["Vazgeç","Sil"],
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    swal("Poof! Dosya başarılı şekilde silindi!", {
                        icon: "success",
                        buttons:"Kapat"
                        
                    });
                } else {
                    swal("Dosyanız silinmedi!", {
                        buttons: "Kapat"
                    });
                    
                }
                
            });

    });
</script>

