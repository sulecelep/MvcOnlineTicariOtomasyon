@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td>
                <img src="@item.PersonelGorsel" style="width:100px; height:60px;"/>
            </td>
            <td>@item.Departman.DepartmanAd</td>
            <td><a href="/Personel/PersonelGuncelle/@item.Personelid" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@item.Personelid" class="btn btn-dark">Satışlar</a></td>

        </tr>
    }



</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary">Personel Ekle</a>



