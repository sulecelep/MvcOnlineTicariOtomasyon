@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.KargoDetay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Kodu: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip Kodu</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Personel</td>
            <td>@item.Alici</td>
            <td>@item.Tarih</td>
            <td>@item.TakipKodu</td>
            <td><a href="/Kargo/KargoTakip/@item.TakipKodu" class="btn btn-dark">Detaylar</a></td>

        </tr>
    }



</table>
<a href="/Kargo/KargoEkle/" class="btn btn-primary">Yeni Kargo Ekle</a>


